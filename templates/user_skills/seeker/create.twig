<h2>Tambah Skill</h2>
<form method="POST" enctype="multipart/form-data" action="/seeker/user-skills">
	<div class="mb-3">
		<label for="id_skill" class="form-label">Pilih Skill</label>
		<select name="id_skill" class="form-control" required>
			{% for skill in skills %}
				<option value="{{ skill.id }}">{{ skill.name }}</option>
			{% endfor %}
		</select>
	</div>

	<div class="mb-3">
		<label for="pdf">Upload Sertifikat (PDF, Maks. 5MB)</label>
		<input type="file" name="pdf" accept="application/pdf" class="form-control">
	</div>


	<button type="submit" class="btn btn-success">Simpan</button>
</form>

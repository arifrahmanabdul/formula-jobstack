<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Skill Pengguna - Admin Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Fonts & Icons -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Admin CSS -->
  <link rel="stylesheet" href="/css/admin2.css">
</head>
<body>
  <div class="admin-container">
    <!-- Header -->
    <div class="admin-header">
      <div class="header-left">
        <h1><i class="fas fa-user-cog"></i> Skill Pengguna</h1>
        <p>Daftar semua skill yang dimiliki oleh pengguna sistem</p>
      </div>
      <div class="header-right">
        <a href="/dashboard/admin" class="logout-btn">
          <i class="fas fa-arrow-left"></i>
          <span>Kembali ke Dashboard</span>
        </a>
      </div>
    </div>

    <!-- Layout -->
    <div class="admin-layout">
      <!-- Sidebar Manual -->
      <div class="nav-card">
        <div class="nav-header">
          <h2><i class="fas fa-tachometer-alt"></i> Admin Panel</h2>
          <p>Navigasi sistem administrasi</p>
        </div>
        <div class="nav-content">
          <!-- Dashboard -->
          <div class="nav-section">
            <ul class="nav-menu">
              <li class="nav-item">
                <a href="/dashboard/admin" class="nav-link">
                  <i class="fas fa-home"></i>
                  Dashboard
                </a>
              </li>
            </ul>
          </div>

          <!-- Master Data -->
          <div class="nav-section">
            <div class="nav-section-title">Master Data</div>
            <ul class="nav-menu">
              <li class="nav-item">
                <a href="/admin/skills" class="nav-link">
                  <i class="fas fa-cogs"></i>
                  Skills
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/industries" class="nav-link">
                  <i class="fas fa-industry"></i>
                  Industri
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/job-categories" class="nav-link">
                  <i class="fas fa-tags"></i>
                  Kategori Pekerjaan
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/locations" class="nav-link">
                  <i class="fas fa-map-marker-alt"></i>
                  Lokasi
                </a>
              </li>
            </ul>
          </div>

          <!-- Data Inti -->
          <div class="nav-section">
            <div class="nav-section-title">Data Inti</div>
            <ul class="nav-menu">
              <li class="nav-item">
                <a href="/admin/companies" class="nav-link">
                  <i class="fas fa-building"></i>
                  Perusahaan
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/jobs" class="nav-link">
                  <i class="fas fa-briefcase"></i>
                  Lowongan
                </a>
              </li>
            </ul>
          </div>

          <!-- Lamaran & Relasi -->
          <div class="nav-section">
            <div class="nav-section-title">Lamaran & Relasi</div>
            <ul class="nav-menu">
              <li class="nav-item">
                <a href="/admin/applications" class="nav-link">
                  <i class="fas fa-file-alt"></i>
                  Lamaran
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/application-notes" class="nav-link">
                  <i class="fas fa-sticky-note"></i>
                  Catatan Lamaran
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/user-skills" class="nav-link active">
                  <i class="fas fa-user-cog"></i>
                  Skill Pelamar
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/user-experiences" class="nav-link">
                  <i class="fas fa-briefcase"></i>
                  Pengalaman Pelamar
                </a>
              </li>
              <li class="nav-item">
                <a href="/admin/user-educations" class="nav-link">
                  <i class="fas fa-graduation-cap"></i>
                  Pendidikan Pelamar
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Konten -->
      <div class="content-card">
        <div class="content-header">
          <h2 class="content-title">
            <i class="fas fa-list"></i>
            Daftar Skill Pengguna
          </h2>
        </div>
        <div class="content-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Nama Pengguna</th>
                <th>Skill</th>
              </tr>
            </thead>
            <tbody>
              {% for skill in userSkills %}
                <tr>
                  <td>{{ skill.full_name }}</td>
                  <td>{{ skill.skill_name }}</td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="2" class="text-center"><em>Tidak ada data skill pengguna.</em></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- JavaScript -->
  <script src="/js/admin2.js"></script>
</body>
</html>

<h2>Tambah Review Perusahaan</h2>

<form action="/admin/company-reviews" method="POST">
    <div class="mb-3">
        <label for="id_company" class="form-label">Perusahaan</label>
        <select name="id_company" class="form-select" required>
            {% for company in companies %}
                <option value="{{ company.id }}">{{ company.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="mb-3">
        <label for="id_user" class="form-label">Reviewer</label>
        <select name="id_user" class="form-select" required>
            {% for user in users %}
                <option value="{{ user.id }}">{{ user.full_name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="mb-3">
        <label for="rating" class="form-label">Rating (1-5)</label>
        <input type="number" name="rating" class="form-control" min="1" max="5" required>
    </div>

    <div class="mb-3">
        <label for="title" class="form-label">Judul</label>
        <input type="text" name="title" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="review_text" class="form-label">Review</label>
        <textarea name="review_text" class="form-control" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-success">Simpan</button>
    <a href="/admin/company-reviews" class="btn btn-secondary">Batal</a>
</form>
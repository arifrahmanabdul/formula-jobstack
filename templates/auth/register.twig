<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Create account - Jobstack</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/auth.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="auth-body register-page">

<!-- Auth Header - Logo positioned at top left -->
<div class="auth-header">
  <a href="/" class="auth-logo">
    <div class="logo-icon">
      <i class="fas fa-briefcase"></i>
    </div>
    <span class="logo-text">Jobstack</span>
  </a>
</div>

<div class="auth-container">
  <!-- Role Selector -->
  <div class="auth-form-wrapper">
    <!-- Auth Form Header with Role Selector -->
    <div class="auth-form-header">
      <div class="header-top">
        <h1 class="auth-title">Create account.</h1>
        <!-- Role Selector positioned next to title -->
        <div class="role-selector-inline">
          <div class="role-dropdown">
            <button type="button" class="role-dropdown-btn" id="roleDropdownBtn">
              <span id="selectedRole">Recruiters</span>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <div class="role-dropdown-menu" id="roleDropdownMenu">
              <div class="role-option" data-role="recruiter">Recruiters</div>
              <div class="role-option" data-role="seeker">Job Seekers</div>
            </div>
          </div>
        </div>
      </div>
      <p class="auth-subtitle">
        Already have account? 
        <a href="/login" class="auth-link">Log In</a>
      </p>
    </div>

    <!-- Error/Success Messages -->
    <div id="messageContainer" style="display: none;"></div>

    <form method="post" action="/register" class="auth-form" id="registerForm">
      <input type="hidden" name="role" id="roleInput" value="recruiter">
      
      <div class="form-group">
        <input 
          type="text" 
          name="full_name" 
          placeholder="Full Name *" 
          class="form-input"
          required
          id="fullNameInput"
          value="{{ full_name|default('') }}"
        >
      </div>

      <div class="form-group">
        <input 
          type="email" 
          name="email" 
          placeholder="Email address *" 
          class="form-input"
          required
          value="{{ email|default('') }}"
        >
      </div>

      <div class="form-group">
        <div class="password-input-wrapper">
          <input 
            type="password" 
            name="password" 
            placeholder="Password *" 
            class="form-input password-input"
            id="registerPassword"
            required
            minlength="6"
          >
          <button type="button" class="password-toggle">
            <svg class="eye-icon eye-show" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" stroke="currentColor" stroke-width="2" fill="none"/>
              <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
            <svg class="eye-icon eye-hide" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24" stroke="currentColor" stroke-width="2" fill="none"/>
              <line x1="1" y1="1" x2="23" y2="23" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
        </div>
      </div>

      <div class="form-group">
        <div class="password-input-wrapper">
          <input 
            type="password" 
            name="confirm_password" 
            placeholder="Confirm Password *" 
            class="form-input password-input"
            id="confirmPassword"
            required
            minlength="6"
          >
          <button type="button" class="password-toggle">
            <svg class="eye-icon eye-show" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" stroke="currentColor" stroke-width="2" fill="none"/>
              <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
            <svg class="eye-icon eye-hide" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24" stroke="currentColor" stroke-width="2" fill="none"/>
              <line x1="1" y1="1" x2="23" y2="23" stroke="currentColor" stroke-width="2"/>
            </svg>
          </button>
        </div>
      </div>

      <div class="form-group">
        <label class="checkbox-wrapper terms-checkbox">
          <input type="checkbox" name="terms" class="checkbox-input" required>
          <span class="checkbox-custom"></span>
          <span class="checkbox-label">
            I've read and agree with our 
            <a href="/terms" class="terms-link">Terms of Services</a> *
          </span>
        </label>
      </div>

      <button type="submit" class="auth-button" id="registerBtn">
        <span class="btn-text">Create Account</span>
        <div class="btn-loading" style="display: none;">
          <div class="spinner"></div>
          <span>Creating...</span>
        </div>
        <svg class="btn-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </form>
  </div>
</div>

<script src="/js/auth.js"></script>

<script>
function togglePassword(inputId) {
  const input = document.getElementById(inputId);
  const isVisible = input.type === 'text';
  input.type = isVisible ? 'password' : 'text';
  input.nextElementSibling.classList.toggle('show', !isVisible);
}

document.getElementById('registerForm').addEventListener('submit', function(e) {
  const pw = document.getElementById('registerPassword').value;
  const cpw = document.getElementById('confirmPassword').value;
  if (pw !== cpw) {
    e.preventDefault();
    alert('Password dan Konfirmasi Password tidak sama!');
  }
});
</script>

</body>
</html>
